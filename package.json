{
  "name": "death-of-the-gods",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run --testNamePattern=\"Performance Tests\"",
    "test:integration": "vitest run --testNamePattern=\"Integration Tests\"",
    "coverage": "node tests/coverage-report.js",
    "coverage:html": "vitest run --coverage --reporter=html"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "jsdom": "^22.1.0",
    "vitest": "^0.34.6"
  }
} 